
# Pacman settings
alias search='yaourt -Ss'
alias install='yaourt -S'
alias uninstall='sudo pacman -Rns'
alias update='yaourt -Syu'
alias sync-mirrors='echo "Updating package list, this may take a minute..."; su -c "rankmirrors -n 5 /etc/pacman.d/mirrorlist-us > /etc/pacman.d/mirrorlist"; sudo pacman -Syy'

