# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.
#
# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"

# Set MacVim to vim
# alias vim='/Applications/MacVim.app/Contents/MacOS/Vim'

# Linux settings
alias llg='ls -al --color=auto --group-directories-first'
alias lsg='ls --color=auto --group-directories-first'
alias ls='ls --color=auto'
alias ll='ls -al --color=auto'

# Pacman settings
alias install='sudo pacman -S'
alias search='sudo pacman -Ss'
alias update='sudo pacman -Syu'
alias refresh-mirrors='echo "This will take a minute..."; sudo sh -c "rankmirrors -n 5 /etc/pacman.d/mirrorlist-us.backup > /etc/pacman.d/mirrorlist" && sudo pacman -Syy'
alias community-install='yaourt -S'
alias community-search='yaourt -Ss'

# git settings
alias gitlog='git log --graph --all --oneline --decorate'
alias commit='git commit -am'
alias clone='git clone'
alias checkout='git checkout'
alias push='git push origin'
alias pull='git pull origin'

# Exports
export PATH=$PATH:$HOME/Projects/bin:$HOME/.bin
export EDITOR=nano
